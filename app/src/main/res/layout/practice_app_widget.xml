<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.PracticeApp.AppWidget.Container"
    android:id="@+id/appwidget_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#FFC6C6"
    android:theme="@style/Theme.PracticeApp.AppWidgetContainer">
    <TextView
        android:id="@+id/appwidget_text"
        style="@style/Widget.PracticeApp.AppWidget.InnerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:contentDescription="@string/appwidget_text"
        android:text="@string/appwidget_text"
        android:background="@android:color/transparent"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/appwidget_button"
        android:text="I have"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="5dp"
        android:layout_weight="2" />
<!--        android:layout_centerHorizontal="true" -->

</LinearLayout>